{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "paths": {
        "rxjs": [
          "./node_modules/rxjs"
        ],
        "rxjs/*": [
          "./node_modules/rxjs/*"
        ]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
